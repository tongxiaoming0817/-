.user-info{
  border-bottom: 1px #b4b5b6 solid;
  height: 150rpx;
  display: flex;
  align-items: center;
}

.user-info image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-info text{
  margin-left: 10rpx;
}

.user-info button{
 margin: 0;
}

.user-list-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50rpx;
  border-bottom: 1px #b4b5b6 dashed;
  padding: 10rpx ;
}